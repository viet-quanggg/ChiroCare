@page
@model ChiroCareRazorPages.Pages.ServiceCategories.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Chỉnh sửa thông tin</h1>

<h4>Phân Loại Dịch Vụ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceCategory.CategoryId" />
            <div class="form-group">
                <label asp-for="ServiceCategory.CategoryName" class="control-label">Tên Phân Loại</label>
                <input asp-for="ServiceCategory.CategoryName" class="form-control" />
                <span asp-validation-for="ServiceCategory.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
