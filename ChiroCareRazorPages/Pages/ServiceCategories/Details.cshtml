@page
@model ChiroCareRazorPages.Pages.ServiceCategories.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Chi Tiết Phân Loại</h1>

<div>
    <h4>Phân Loại Dịch Vụ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Phân Loại
            @* @Html.DisplayNameFor(model => model.ServiceCategory.CategoryName) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceCategory.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Dịch vụ
            @* @Html.DisplayNameFor(model => model.ServiceCategory.CategoryName) *@
        </dt>
        @foreach (var item in Model.ServiceCategory.Services)
        {
            <dd class="col-sm-10">
              @item.ServiceName
            </dd>
        }
               
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ServiceCategory?.CategoryId">Chỉnh sửa</a> |
    <a asp-page="./Index">Trở về danh sách</a>
</div>
