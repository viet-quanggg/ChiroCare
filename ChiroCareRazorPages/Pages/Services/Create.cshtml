@page
@model ChiroCareRazorPages.Pages.Services.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Tạo Dịch Vụ Mới</h1>

<h4>Thông tin dịch vụ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service.ServiceName" class="control-label">Tên dịch vụ</label>
                <input asp-for="Service.ServiceName" class="form-control" />
                <span asp-validation-for="Service.ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.ServicePrice" class="control-label">Đơn giá</label>
                <input asp-for="Service.ServicePrice" class="form-control" />
                <span asp-validation-for="Service.ServicePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.ServiceDescription" class="control-label">Mô tả dịch vụ</label>
                <input asp-for="Service.ServiceDescription" class="form-control" />
                <span asp-validation-for="Service.ServiceDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.CategoryId" class="control-label">Phân loại</label>
                <select asp-for="Service.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
