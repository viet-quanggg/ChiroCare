@model ChiroCareRazorPages.Pages.Services.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Chi Tiết Dịch Vụ</h1>

<div>
    <h4>Thông tin dịch vụ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Dịch Vụ
            @* @Html.DisplayNameFor(model => model.Service.ServiceName) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceName)
        </dd>
        <dt class="col-sm-2">
            Đơn giá
            @* @Html.DisplayNameFor(model => model.Service.ServicePrice) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.ServicePrice)
        </dd>
        <dt class="col-sm-2">
            Mô tả
            @* @Html.DisplayNameFor(model => model.Service.ServiceDescription) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceDescription)
        </dd>
        <dt class="col-sm-2">
            Phân loại
            @* @Html.DisplayNameFor(model => model.Service.ServiceCategory) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceCategory.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Service?.ServiceId">Chỉnh sửa</a> |
