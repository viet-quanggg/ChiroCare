@page
@model ChiroCareRazorPages.Pages.Invoices.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Danh sách hoá đơn</h1>

<p>
    <a asp-page="Create">Tạo hoá đơn mới</a>
</p>
<table class="table" id="invoiceTable">
    <thead>
        <tr>
            <th>
                Tên khách hàng
                @* @Html.DisplayNameFor(model => model.Invoice[0].InvoiceStatus) *@
            </th>
            <th>
               Thanh toán
                @* @Html.DisplayNameFor(model => model.Invoice[0].CreateDate) *@
            </th>
            <th>
                Ngày tạo
                @* @Html.DisplayNameFor(model => model.Invoice[0].InvoiceDiagnose) *@
            </th>
            <th>
                Chi tiết
                @* @Html.DisplayNameFor(model => model.Invoice[0].InvoiceNote) *@
            </th>
            <th>
                Note
                @* @Html.DisplayNameFor(model => model.Invoice[0].InvoiceNote) *@
            </th>
            <th>
               Số lượng buổi khám
                @* @Html.DisplayNameFor(model => model.Invoice[0].InvoiceTotal) *@
            </th>
            <th>
                Thành tiền
                @* @Html.DisplayNameFor(model => model.Invoice[0].Patient) *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FullName)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.InvoiceStatus)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            
           @{
               // Assuming @item.InvoiceTotal is a decimal value
               decimal invoiceTotal = @item.InvoiceTotal;
           
               // Creating a CultureInfo object for Vietnamese culture
               System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("vi-VN");
           
               // Formatting the invoiceTotal to VND
               string formattedTotal = invoiceTotal.ToString("C", culture);
           }
           
           <td>@formattedTotal</td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.InvoiceId">Chi tiết</a>
                @if (item.ListSessions.Count == item.Quantity)
                {
                    <a> | Đã khám đủ số buổi!</a>
                }
                @if (item.ListSessions.Count < item.Quantity)
                {
                    <a asp-page="/Sessions/Create" asp-route-id="@item.InvoiceId"> | Cập nhật buổi khám</a>

                }
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts
{
    <script>
        $(document).ready(function() {
            $('#invoiceTable').DataTable({
                responsive: true
            });
        });
    </script>
}