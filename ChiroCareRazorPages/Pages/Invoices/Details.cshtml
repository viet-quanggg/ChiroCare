@page
@model ChiroCareRazorPages.Pages.Invoices.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Chi Tiết Hoá Đơn</h1>

<div>
    <h4>Thông tin hoá đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
                    Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.Patient.FullName)
        </dd>
        
        <dt class="col-sm-2">
            Trạng thái hoá đơn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceStatus)
        </dd>
        <dt class="col-sm-2">
            Ngày xuất
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.CreateDate)
        </dd>
        <dt class="col-sm-2">
            Chuẩn đoán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceDiagnose)
        </dd>
        <dt class="col-sm-2">
            Chi tiết
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceDescription)
        </dd>
        <dt class="col-sm-2">
            Note
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceNote)
        </dd>
        <dt class="col-sm-2">
            Thành tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceTotal)
        </dd>

        <hr/>
        <h4>Danh sách dịch vụ</h4>
        @if (Model.Invoice.ListServices != null & @Model.Invoice.ListServices.Count > 0)
        {
            <table>
                <thead>
                <tr>
                    <th>Tên dịch vụ</th>
                    <th>Giá tiền</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in @Model.Invoice.ListServices)
                {
                    <tr>

                        <td>@item.ServiceName</td>
                        <td>@item.ServicePrice</td>

                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <h3>Hoá đơn không có dịch vụ!</h3>
        }
        
    </dl>
</div>
<div>
    <a asp-page="./Index">Trở về danh sách</a>
</div>
